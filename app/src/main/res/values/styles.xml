<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/accent</item>
    </style>

    <style name="JsonKey" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/json_key</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.JsonViewer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Remove action bar completely -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>