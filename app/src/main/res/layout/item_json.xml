<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/json_item_padding_horizontal"
    android:paddingTop="@dimen/json_item_padding_vertical"
    android:paddingEnd="@dimen/json_item_padding_horizontal"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:longClickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minHeight="@dimen/json_item_min_height">

        <TextView
            android:id="@+id/tvKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/json_key_text_size"
            android:textStyle="bold"
            android:textColor="@color/json_key"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="sample_key"/>

        <TextView
            android:id="@+id/tvValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/json_text_margin_start"
            android:textSize="@dimen/json_value_text_size"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/json_value"
            tools:text="sample_value"/>

        <ImageView
            android:id="@+id/ivExpand"
            android:layout_width="@dimen/json_expand_icon_size"
            android:layout_height="@dimen/json_expand_icon_size"
            android:layout_marginStart="@dimen/json_expand_icon_margin"
            android:contentDescription="@string/expand_collapse"
            app:srcCompat="@drawable/ic_expand_more"
            app:tint="@color/json_expand_icon"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nestedItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/json_nested_indent"
        android:orientation="vertical"
        android:visibility="gone"/>
</LinearLayout>